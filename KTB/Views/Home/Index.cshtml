@{
    ViewData["Title"] = "Home Page";
}

<h1 style="text-align:center;">Kitaab Ghar - <span style="font-size:20px; font-style:italic;">Online Book Store</span></h1>

<div class="text-center">
    <div class="row">
        @foreach (var book in ViewData["Books"] as List<Book>)
        {
        
        <div id="bookContainer" class="col-lg-3 col-md-4 col-sm-1">
            <a asp-controller="Books" asp-action="BookDetails" asp-route-id="@book.Id">
                <img id="bookImage" style="width: 100%; height: 100%;" src="@book.URL" alt="@book.Title" />
                <span id="bookTitle">@book.Title</span>
            </a>
            <span id="bookPrice">Rs. @book.Price</span>
            <span id="bookQuantity"><input id="quantityInput" type="number" name="bookQuantity" value="" placeholder="0" /></span>
            <span id="bookCartButton"><button id="btn"><span class="fa fa-shopping-cart"></span>Add to Cart</button></span>
        </div>
        }
    </div>

</div>
